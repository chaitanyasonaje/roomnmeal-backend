PORT=5000
MONGODB_URI=
JWT_SECRET=your_super_secret_jwt_key_should_be_long_and_complex
NODE_ENV=development

# CORS (comma-separated origins, leave empty for permissive in dev)
CORS_ORIGIN=

# Cloudinary (Required for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Razorpay (Required for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Firebase Admin SDK
# Option 1: Path to serviceAccountKey.json (local dev)
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json
# Option 2: JSON content as string (for production/containers)
# FIREBASE_SERVICE_ACCOUNT_JSON=
